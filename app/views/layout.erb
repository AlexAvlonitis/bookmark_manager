<html>
  <head>
    <title>Bookmark Manager</title>
  </head>
  <body>
    <% if flash[:errors] && !flash[:errors].empty? %>
      <% flash[:errors].each do |error| %>
        <div id='notice'><%= error %></div>
      <% end %>
    <% end %>
    <%= flash[:notice] %>
    <%= yield %>
  </body>
</html>
