<html>
  <head>
    <title>Bookmark Manager</title>
  </head>
  <body>
    <% if flash[:notice] && !flash[:notice].empty? %>
      <% flash[:notice].each do |error| %>
        <div id='notice'><%= error %></div>
      <% end %>
    <% end %>
    <%= flash[:goodbye] %>
    <%= yield %>
  </body>
</html>
